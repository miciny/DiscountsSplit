/**index.wxss**/


.userinfo {
  display: flex;
  margin-left: 15px;
  flex-direction: row;
  align-items: center;
}
.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  margin-left: 10px;
}


.inputForm{
  width: 100%;
}
.section {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 25px;
  vertical-align: middle;

  background: #b9cf6a;
  background: rgba(255, 255, 255, .3);
  border-color: rgba(255, 255, 255, .6);
  border-style: solid;
  border-width: 2px;
  border-radius: 5px;
  line-height: 100%;
  list-style: none;
  padding: 5px 5px;
  margin-bottom: 2px;
}
.inputAll-label {
  font-size: 35rpx;
  width: 200rpx;
  margin-left: 10px;
  margin-top: 4px;
  height: 7px;
  padding: 1px 1px 1px 2px;
  color: #888;
}
.inputAll-input {
  border: 1px solid #DADADA;
  color: #888;
  margin-left: 5px;
  margin-right: 6px;
  outline: 0 none;
  padding: 1px 1px 1px 2px;
  width: 50%;
  font-size: 35rpx;
  line-height:15px;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: inset 0px 1px 4px #ECECEC;
  -moz-box-shadow: inset 0px 1px 4px #ECECEC;
  -webkit-box-shadow: inset 0px 1px 4px #ECECEC;
}
.picker {
  padding-left: 5px;
  font-size: 32rpx;
  margin-top: 4px;
  height: 7px;
}
.calculateView {
  margin-top: 25rpx;
  width: 100%;
  align-content: center;
  align-items: center;
}
.calculateBtn {
  width: 40%;
  line-height: 38px;
  text-align: center;
  color: #000;
  text-shadow:1px 1px 1px #999;
  border-radius: 5px;
  position: relative;
  overflow: hidden;
  background-color: #fff;
}


.table {
  border: 0px solid darkgray;
  width: 100%;
  margin-top: 10px;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:100%;
    justify-content: center;
    text-align: center;
}
.bg-title{
  background: snow;
  font-size: 35rpx;
}
.bg-g{
  background: #E6F3F9;
  font-size: 30rpx;
}
.bg-w{
  background: lightgray;
  font-size: 30rpx;
}
.th {
  width: 100%;
  justify-content: center;
  background: darkgray;
  color: #fff;
  display: flex;
  height: 2rem;
  align-items: center;
}