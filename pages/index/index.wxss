/**index.wxss**/
.userinfo {
  display: flex;
  margin-left: 30px;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-left: 10px;
}

.inputAll {
  margin-top: 15px;
  margin-left: 25px;
}

.inputAlla {
  display: flex;
  flex-direction: row;
  margin-top: 12px;
}

.inputAll-label {
  justify-content: true;
  font-size: 35rpx;
}

.inputAll-input {
  margin-left: 25px;
  margin-top: 2px;
  border-style: solid;
  border-width: 0.3px;
  border-color: lightgray;
  padding-left: 5px;
  width: 50%;
  font-size: 35rpx;
}

.picker {
  margin-top: 2px;
  margin-left: 20px;
  padding-left: 5px;
}

.calculate {
  width: 30%;
  margin-top: 25rpx;
  margin-left: 35%;
}

.result {
  background-color: lightgray;
  width: 100%;
  margin-top: 15px;
  padding-left: 20px;
  font-size: 30rpx;
}

.resultFinal {
  background-color: lightgray;
  width: 100%;
  margin-top: 0px;
  padding-left: 20px;
  font-size: 40rpx;
  color: #F00;
}